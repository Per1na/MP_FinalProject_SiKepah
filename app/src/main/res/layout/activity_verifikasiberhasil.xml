<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hijau_lumut">

        <ImageView
            android:id="@+id/vectorImageView"
            android:layout_width="175dp"
            android:layout_height="166dp"
            android:background="@drawable/ellipse_shape"
            android:contentDescription="@string/checklist_ikon"
            android:src="@drawable/ic_checklist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.564" />

        <TextView
            android:id="@+id/VerifikasiDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:shadowColor="@color/hitam"
            android:shadowDx="2"
            android:shadowDy="8"
            android:shadowRadius="9"
            android:text="@string/Verifikasi_BerhasilPelanggan"
            android:textAllCaps="true"
            android:textColor="@color/Putih_pudar"
            android:textSize="@dimen/_24ssp"
            app:drawableBottomCompat="@drawable/ic_checklist"
            app:layout_constraintBottom_toTopOf="@id/vectorImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.893" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-200dp"
        android:background="@drawable/ellipse_shape"
        android:elevation="@dimen/_12sdp" />

    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="-280dp"
        android:layout_marginEnd="-140dp"
        android:background="@drawable/ellipse_shape"
        android:elevation="@dimen/_10sdp" />

    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="-280dp"
        android:layout_marginStart="-140dp"
        android:background="@drawable/ellipse_shape"
        android:elevation="@dimen/_12sdp" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="-200dp"
        android:layout_marginEnd="-80dp"
        android:background="@drawable/ellipse_shape"
        android:elevation="@dimen/_10sdp" />

</FrameLayout>